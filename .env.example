# Cactus Flasher - Environment Variables
# Copy to .env and customize

# REQUIRED: Change this to a strong random secret for JWT signing
SECRET_KEY=change-me-to-a-random-secret-at-least-32-chars

# DDNS hostname for board resolution
DDNS_HOST=esp32gb.ddns.net

# Build tool paths (only needed if using build features)
ESPHOME_PATH=esphome
ARDUINO_CLI_PATH=arduino-cli
PLATFORMIO_PATH=pio

# Server settings (used by docker-compose)
APP_PORT=8000
